<div class="settings-container">

    <h2>Ajustes</h2>

    <!-- SEGURIDAD -->
    <section class="settings-section">
        <h3>Seguridad</h3>

        <div class="input-group">
            <label>Nombre de usuario</label>
            <input type="text" placeholder="Usuario">
        </div>

        <div class="input-group">
            <label>Nueva contraseña</label>
            <input type="password" placeholder="••••••••">
        </div>

        <button class="primary-btn">Guardar cambios</button>
    </section>

    <!-- HORARIO -->
    <section class="settings-section">
        <h3>Horario laboral</h3>

        <div class="schedule-row">
            <span>Horario principal</span>
            <div class="time-range">
                <input type="time" value="09:00">
                <span>—</span>
                <input type="time" value="17:00">
            </div>
        </div>

        <div class="schedule-row">
            <span>Descanso / comida</span>
            <div class="time-range">
                <input type="time" value="14:00">
                <span>—</span>
                <input type="time" value="15:00">
            </div>
        </div>

        <button class="secondary-btn">+ Añadir otro tramo</button>
    </section>

    <!-- CERRAR SESIÓN -->
    <section class="settings-section danger">
        <button class="danger-btn">Cerrar sesión</button>
    </section>

</div>
