<div class="task-container">
    <h2>Crear tarea</h2>

    <form action="/Task/Create" method="POST">
        <div class="input-group">
            <label>Nombre de la tarea</label>
            <input type="text" name="task" placeholder="Ej. Preparar informe" required>
        </div>

        <div class="input-group">
            <label>Fecha de finalizaci√≥n</label>
            <input type="date" name="date" required>
        </div>

        <div class="input-group">
            <label>Horas requeridas</label>
            <input type="number" name="hours" min="0" step="0.5" placeholder="Ej. 2" required>
        </div>

        <button type="submit" class="primary-btn">Crear</button>
    </form>
</div>
