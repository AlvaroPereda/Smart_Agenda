<div class="settings-container">

    <h2>Ajustes</h2>

    <!-- SEGURIDAD -->
    <section class="settings-section">
        <h3>Seguridad</h3>

        <div class="input-group">
            <label>Nombre de usuario</label>
            <input id="name" type="text" placeholder="Usuario">
        </div>

        <div class="input-group">
            <label>Nueva contraseña</label>
            <input id="password" type="password" placeholder="••••••••">
        </div>

        <p id="user-error" class="error-label"></p>

        <button id="save-user" class="primary-btn">Guardar cambios</button>
    </section>

    <!-- HORARIO -->
    <section class="settings-section">
        <h3>Horario laboral</h3>

        <table id="schedules-table">
            <thead>
                <tr>
                    <th>Tipo</th>
                    <th>Hora de inicio</th>
                    <th>Hora de fin</th>
                </tr>
            </thead>
            <tbody>
                <tr class="schedule-row main-row">
                    <td>Horario principal</td>
                    <td><input type="time" id="main-start"></td>
                    <td><input type="time" id="main-end"></td>
                </tr>
            </tbody>
        </table>

        <span id="schedule-error" class="row-error"></span>

        <button id="add-schedule" class="secondary-btn" style="margin-top: 15px;">+ Añadir otro tramo</button>
        <div style="margin-top: 20px; border-top: 1px solid #eee; padding-top: 15px;">
            <button id="save-schedules" class="primary-btn">Guardar Horarios</button> 
        </div>
    </section>

    <!-- CERRAR SESIÓN -->
    <section class="settings-section danger">
        <button id="log-out" class="danger-btn">Cerrar sesión</button>
    </section>

</div>

@section Scripts {
    <script src="~/js/settings.js"></script>
}
