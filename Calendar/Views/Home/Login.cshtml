@{
    Layout = "_Layout_Login";
}

<div class="login-container">
    <h2 id="form-title">Iniciar sesión</h2>

    <div asp-validation-summary="All" class="error-label"></div>

    <form action="/Home/Login" method="POST">
        <div class="input-group">
            <input type="text" name="name" placeholder="Usuario" autocomplete="username" required />
        </div>

        <div class="input-group">
            <input type="password" name="password" placeholder="Contraseña" autocomplete="current-password" required />
        </div>

        <div class="extra-fields" id="extra-fields">
            <label>Horario principal</label>
            <div class="time-row">
                <input type="time" id="start" name="start">
                <span>—</span>
                <input type="time" id="end" name="end">
            </div>
        </div>

        <input type="hidden" name="action" value="login" id="action-input" />

        <button type="submit" class="primary-btn" id="submit-button">Entrar</button>
    </form>

    <div class="footer">
        <p id="toggle-text">¿No tienes cuenta?</p>
        <button type="button" class="link-btn" id="toggle">Registrarse</button>
    </div>
</div>


@section Scripts {
    <script src="~/js/login.js"></script>
}